{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true, 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*",
        ]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/__tests__/*"]
}